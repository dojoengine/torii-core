#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}=== Running pre-commit checks ===${NC}"

# 1. Format check
echo -e "\n${YELLOW}[1/2] Checking formatting (cargo fmt)...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}✗ Formatting issues found. Run 'cargo fmt --all' to fix.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Formatting OK${NC}"

# 2. Clippy
echo -e "\n${YELLOW}[2/2] Running clippy...${NC}"
if ! cargo clippy --workspace --all-targets -- -D warnings; then
    echo -e "${RED}✗ Clippy found issues${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Clippy OK${NC}"

echo -e "\n${GREEN}=== Pre-commit checks passed! ===${NC}"
