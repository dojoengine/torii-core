#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}=== Running pre-push checks ===${NC}"

# Run full lint script (includes tests)
if ! ./scripts/lint.sh; then
    echo -e "${RED}âœ— Pre-push checks failed. Please fix issues before pushing.${NC}"
    exit 1
fi

echo -e "\n${GREEN}=== Pre-push checks passed! ===${NC}"
