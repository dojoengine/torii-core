{
  "name": "torii.js",
  "version": "0.1.0",
  "description": "TypeScript/JavaScript client library and CLI for Torii gRPC services",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "torii.js": "./bin/torii.js"
  },
  "scripts": {
    "build": "bun build ./src/cli/index.ts --outdir ./dist/cli --target bun && bun build ./src/index.ts --outdir ./dist --target bun && tsc --emitDeclarationOnly",
    "dev": "bun run ./src/cli/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "@connectrpc/connect": "^2.0.0",
    "@connectrpc/connect-web": "^2.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "torii",
    "grpc",
    "starknet",
    "blockchain",
    "indexer"
  ],
  "license": "MIT"
}
